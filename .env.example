# n8n Configuration
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_HOST=${RAILWAY_STATIC_URL}
WEBHOOK_URL=https://${RAILWAY_STATIC_URL}

# Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=ShieldCar2024!

# Database (Railway PostgreSQL)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=${PGHOST}
DB_POSTGRESDB_PORT=${PGPORT}
DB_POSTGRESDB_DATABASE=${PGDATABASE}
DB_POSTGRESDB_USER=${PGUSER}
DB_POSTGRESDB_PASSWORD=${PGPASSWORD}

# Timezone
GENERIC_TIMEZONE=America/Sao_Paulo
TZ=America/Sao_Paulo

# Execution
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# ManyChat Configuration (opcional - apenas se usar integração ManyChat)
MANYCHAT_API_TOKEN=your_manychat_api_token_here
MANYCHAT_TEAM_SUBSCRIBER_ID=subscriber_id_for_team_notifications
